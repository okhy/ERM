{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "Components/*": ["src/components/*"],
      "Views/*": ["src/views/*"],
      "Services/*": ["src/services/*"],
      "App/*": ["src/*"],
      "Types": ["src/types.d.ts"],
      "Mocks/*": ["__mocks__/*"]
    },
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "lib": ["es5", "es6", "es7", "es2017", "dom"],
    "jsx": "react",
    "pretty": true,
    "allowJs": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },
  "include": ["./src/**/*"],
  "exclude": [
    "./node_modules",
    "./dist",
    "./__mocks__",
    "./coverage",
    "./server"
  ]
}
